@model IEnumerable<UsersManager.Models.Login>

@{ ViewBag.Title = "LoginsJournal"; }

<h2>Journal des connexions</h2>

<div id="LoginsListContainer">
    <!-- Periodically refreshed -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/partialRefresh")

    <script defer>
        ForceRefresh();
        function ForceRefresh() {
            let url = "@Url.Action("/")" + "GetLoginsList?forceRefresh=true";
            DoPartialRefresh(url, "LoginsListContainer");
        }
        installPartialRefresh("@Url.Action("GetLoginsList")", "LoginsListContainer", 5 /*secondes*/);
    </script>
}

